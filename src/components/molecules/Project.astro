---
import { Image } from "astro:assets";
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardFooter,
} from "@/components/ui/card";
import LinkBtn from "@/components/atoms/LinkBtn.astro";
const { name, description, href, ctext, clink, tools, langs, date } =
  Astro.props;
---

<Card
  className="dark:hover:bg-zinc-800 hover:bg-zinc-300 dark:bg-zinc-900 bg-zinc-200"
>
  <CardHeader>
    <CardTitle>{name}</CardTitle>
  </CardHeader>
  <CardContent>
    <p>{description}</p>
    <p class="text-sm pt-2 text-zinc-600 dark:text-zinc-400">{date}</p>
    <br />
    <div class="flex gap-2">
      {
        langs
          .split(",")
          .map((lang: string) => (
            <Image
              src={`https://raw.githubusercontent.com/tandpfun/skill-icons/refs/heads/main/icons/${lang}.svg`}
              width="48"
              height="48"
              alt="Compétence du projet"
              class="skills-icons"
            />
          ))
      }
    </div>
    <br />
    <div class="flex gap-2">
      {
        tools
          .split(",")
          .map((tool: string) => (
            <Image
              src={`https://raw.githubusercontent.com/tandpfun/skill-icons/refs/heads/main/icons/${tool}.svg`}
              width="48"
              height="48"
              alt="Compétence du projet"
              class="skills-icons"
            />
          ))
      }
    </div>
  </CardContent>
  <CardFooter>
    <LinkBtn
      className="ml-[-10px]"
      text="Voir sur Github"
      href={href}
      size="base"
      target="_blank"
    />
    {ctext && <LinkBtn text={ctext} href={clink} size="base" target="_blank" />}
  </CardFooter>
</Card>
